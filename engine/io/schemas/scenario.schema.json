{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cantanor.local/schema/scenario.schema.json",
  "title": "Scenario",
  "type": "object",
  "required": ["battle_id", "seed", "map", "units", "commands"],
  "properties": {
    "battle_id": {"type": "string"},
    "seed": {"type": "integer"},
    "content_packs": {
      "type": "array",
      "items": {"type": "string", "minLength": 1}
    },
    "content_pack_id": {"type": "string"},
    "required_content_features": {
      "type": "array",
      "items": {"type": "string", "minLength": 1}
    },
    "flags": {
      "type": "object",
      "additionalProperties": {"type": "boolean"}
    },
    "objectives": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type"],
        "properties": {
          "id": {"type": "string"},
          "type": {"type": "string"},
          "result": {"type": "string", "enum": ["victory", "defeat"]},
          "team": {"type": "string"},
          "unit_id": {"type": "string"},
          "x": {"type": "integer"},
          "y": {"type": "integer"},
          "flag": {"type": "string"},
          "value": {"type": "boolean"},
          "round": {"type": "integer", "minimum": 1}
        }
      }
    },
    "objective_packs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "id": {"type": "string"},
          "type": {"type": "string", "enum": ["eliminate_team", "escape_unit", "holdout"]},
          "team": {"type": "string"},
          "unit_id": {"type": "string"},
          "x": {"type": "integer"},
          "y": {"type": "integer"},
          "round": {"type": "integer", "minimum": 1},
          "protect_team": {"type": "string"},
          "defeat_on_death": {"type": "boolean"},
          "result": {"type": "string", "enum": ["victory", "defeat"]}
        }
      }
    },
    "enemy_policy": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "teams": {
          "type": "array",
          "items": {"type": "string"}
        },
        "action": {"type": "string", "enum": ["strike_nearest"]},
        "auto_end_turn": {"type": "boolean"}
      }
    },
    "hazard_routines": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["unit_id", "hazard_id", "source_name"],
        "properties": {
          "id": {"type": "string"},
          "unit_id": {"type": "string"},
          "hazard_id": {"type": "string"},
          "source_name": {"type": "string"},
          "source_type": {"type": "string"},
          "target_policy": {
            "type": "string",
            "enum": ["as_configured", "explicit", "nearest_enemy", "nearest_enemy_area_center", "all_enemies"]
          },
          "priority": {"type": "integer"},
          "cadence_rounds": {"type": "integer", "minimum": 1},
          "max_triggers": {"type": "integer", "minimum": 1},
          "center_x": {"type": "integer"},
          "center_y": {"type": "integer"},
          "target": {"type": "string"},
          "model_path": {"type": "string"},
          "start_round": {"type": "integer", "minimum": 1},
          "end_round": {"type": "integer", "minimum": 1},
          "once": {"type": "boolean"},
          "enabled_flag": {"type": "string"},
          "disabled_flag": {"type": "string"},
          "auto_end_turn": {"type": "boolean"}
        }
      }
    },
    "mission_events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "trigger": {"type": "string", "enum": ["turn_start", "round_start", "unit_dead", "unit_alive", "flag_set"]},
          "round": {"type": "integer", "minimum": 1},
          "start_round": {"type": "integer", "minimum": 1},
          "end_round": {"type": "integer", "minimum": 1},
          "active_unit": {"type": "string"},
          "enabled_flag": {"type": "string"},
          "disabled_flag": {"type": "string"},
          "unit_id": {"type": "string"},
          "flag": {"type": "string"},
          "value": {"type": "boolean"},
          "if_flag": {"type": "string"},
          "if_flag_value": {"type": "boolean"},
          "once": {"type": "boolean"},
          "commands": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type"],
              "properties": {
                "type": {"type": "string"},
                "actor": {"type": "string"}
              }
            }
          },
          "then_commands": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type"],
              "properties": {
                "type": {"type": "string"},
                "actor": {"type": "string"}
              }
            }
          },
          "else_commands": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type"],
              "properties": {
                "type": {"type": "string"},
                "actor": {"type": "string"}
              }
            }
          }
        }
      }
    },
    "reinforcement_waves": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["units"],
        "properties": {
          "id": {"type": "string"},
          "trigger": {"type": "string", "enum": ["turn_start", "round_start"]},
          "round": {"type": "integer", "minimum": 1},
          "start_round": {"type": "integer", "minimum": 1},
          "end_round": {"type": "integer", "minimum": 1},
          "active_unit": {"type": "string"},
          "enabled_flag": {"type": "string"},
          "disabled_flag": {"type": "string"},
          "once": {"type": "boolean"},
          "placement_policy": {"type": "string", "enum": ["exact", "nearest_open"]},
          "spend_action": {"type": "boolean"},
          "set_flag": {"type": "string"},
          "set_flag_value": {"type": "boolean"},
          "units": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "team", "hp", "position", "initiative", "attack_mod", "ac", "damage"],
              "properties": {
                "id": {"type": "string"},
                "team": {"type": "string"},
                "hp": {"type": "integer", "minimum": 1},
                "temp_hp": {"type": "integer", "minimum": 0},
                "position": {
                  "type": "array",
                  "prefixItems": [{"type": "integer"}, {"type": "integer"}],
                  "minItems": 2,
                  "maxItems": 2
                },
                "initiative": {"type": "integer"},
                "attack_mod": {"type": "integer"},
                "ac": {"type": "integer"},
                "damage": {"type": "string"},
                "attack_damage_type": {"type": "string"},
                "fortitude": {"type": "integer"},
                "reflex": {"type": "integer"},
                "will": {"type": "integer"},
                "condition_immunities": {
                  "type": "array",
                  "items": {"type": "string"}
                },
                "resistances": {
                  "type": "object",
                  "additionalProperties": {"type": "integer", "minimum": 0}
                },
                "weaknesses": {
                  "type": "object",
                  "additionalProperties": {"type": "integer", "minimum": 0}
                },
                "immunities": {
                  "type": "array",
                  "items": {"type": "string"}
                }
              }
            }
          }
        }
      }
    },
    "map": {
      "type": "object",
      "required": ["width", "height"],
      "properties": {
        "width": {"type": "integer", "minimum": 1},
        "height": {"type": "integer", "minimum": 1},
        "blocked": {
          "type": "array",
          "items": {
            "type": "array",
            "prefixItems": [{"type": "integer"}, {"type": "integer"}],
            "minItems": 2,
            "maxItems": 2
          }
        }
      }
    },
    "units": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "team", "hp", "position", "initiative", "attack_mod", "ac", "damage"],
        "properties": {
          "id": {"type": "string"},
          "team": {"type": "string"},
          "hp": {"type": "integer", "minimum": 1},
          "temp_hp": {"type": "integer", "minimum": 0},
          "position": {
            "type": "array",
            "prefixItems": [{"type": "integer"}, {"type": "integer"}],
            "minItems": 2,
            "maxItems": 2
          },
          "initiative": {"type": "integer"},
          "attack_mod": {"type": "integer"},
          "ac": {"type": "integer"},
          "damage": {"type": "string"},
          "attack_damage_type": {"type": "string"},
          "fortitude": {"type": "integer"},
          "reflex": {"type": "integer"},
          "will": {"type": "integer"},
          "condition_immunities": {
            "type": "array",
            "items": {"type": "string"}
          },
          "resistances": {
            "type": "object",
            "additionalProperties": {"type": "integer", "minimum": 0}
          },
          "weaknesses": {
            "type": "object",
            "additionalProperties": {"type": "integer", "minimum": 0}
          },
          "immunities": {
            "type": "array",
            "items": {"type": "string"}
          }
        }
      }
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "actor"],
        "properties": {
          "type": {"type": "string"},
          "actor": {"type": "string"},
          "content_entry_id": {"type": "string"}
        }
      }
    }
  }
}
