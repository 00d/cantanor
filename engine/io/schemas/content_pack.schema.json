{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cantanor.local/schema/content_pack.schema.json",
  "title": "ContentPack",
  "type": "object",
  "required": ["pack_id", "version", "compatibility", "entries"],
  "properties": {
    "pack_id": {"type": "string", "minLength": 1},
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9][0-9]*)\\.(0|[1-9][0-9]*)\\.(0|[1-9][0-9]*)$"
    },
    "compatibility": {
      "type": "object",
      "required": ["min_engine_phase", "max_engine_phase"],
      "properties": {
        "min_engine_phase": {"type": "integer", "minimum": 1},
        "max_engine_phase": {"type": "integer", "minimum": 1},
        "feature_tags": {
          "type": "array",
          "items": {"type": "string", "minLength": 1}
        }
      }
    },
    "entries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "kind", "payload"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "kind": {
            "type": "string",
            "enum": ["action", "spell", "feat", "item", "trait", "condition"]
          },
          "source_ref": {"type": "string", "minLength": 1},
          "tags": {
            "type": "array",
            "items": {"type": "string", "minLength": 1}
          },
          "payload": {"type": "object"}
        }
      }
    }
  }
}
